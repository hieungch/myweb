<% bookCoverClass = locals.large ? "book-cover-large" : "" %>

<% bookGridClass = locals.large ? "book-grid-large" : "" %> 

<div class="book-grid <%= bookGridClass %>">
    <% books.forEach(book => { %>
        <a href="/books/<%= book.id %>">
            <!--<img  height="150" width="100" alt="error">
            is replaced using class
            -->
            <img class="book-cover <%= bookCoverClass %>" src="<%= book.coverImagePath%>" alt="error">
        </a>
    <%  }) %> 
</div>

